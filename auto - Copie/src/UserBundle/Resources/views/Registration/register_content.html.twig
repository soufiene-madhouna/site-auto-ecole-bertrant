{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block jumborton %}{% endblock %}
{% block nav %}
{% endblock %}
{% block contentLeft %}
{% endblock %}

{% block contentCentre %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
 <div class="row">
	<p class="text-justify">Bienvenue à bord de notre site coolTrajet qui vous facilité le transport de vos marchandises.
Vous pouvez envoyer ou expédier votre marchandise grâce à notre application qu’elle vous met en relation particuliers et professionnels pour vous garantir une meilleur transactions.     
	</p>
 			
	<div class="input-group col-sm-3">
<h3 class="text-center">Inscrivez-vous</h3>
 	</div>
    <div class="form-group">
				<div class="input-group col-sm-8">
					<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
					{{ form_widget(form.username, {'attr': {'class': 'form-control ','placeholder': form.username.vars.label} }) }}
				</div>
	</div>
	<div class="form-group">
				<div class="input-group col-sm-8">
					<span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
					{{ form_widget(form.email, {'attr': {'class': 'form-control ','placeholder': form.email.vars.label} }) }}
				</div>
	</div>
	<div class="form-group">
				<div class="input-group col-sm-8">
					<span class="input-group-addon"><i class="fa fa-lock fa" aria-hidden="true"></i></span>
					{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control ','placeholder': form.plainPassword.first.vars.label} }) }}
				</div>
	</div>
	<div class="form-group">
				<div class="input-group col-sm-8">
					<span class="input-group-addon"><i class="fa fa-lock fa" aria-hidden="true"></i></span>
					{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control ','placeholder': form.plainPassword.second.vars.label} }) }}
				</div>
	</div>
	
	<div>
        <input class="btn btn-default col-sm-8" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</div>
    
{{ form_end(form) }}
{% endblock %}
