{% extends 'base.html.twig' %}
{% block jumborton %}
{% trans_default_domain 'FOSUserBundle' %}


<div class="row ">
<div class="col-md-offset-8">
{% if error %}
    <div class="text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

   <p>
    <input class="form-control" placeholder="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
	</p>
    <input class="btn btn-ls btn-success  btn-block"type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
   	<p>
    	<input class="checkbox pull-left" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    	&nbsp<label  for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </p>
</form>
</div>
</div>

{%endblock %}
